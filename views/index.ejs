                  <ul class="list-group rounded-0" id="listContainer">
                    <li class="list-group-item border-0 d-flex align-items-center ps-0">
                      <input class="form-check-input me-3" type="checkbox" value="  " aria-label="..." checked />
                      <s>Task list and assignments</s>
                    </li>

                    <li class="list-group-item border-0 d-flex align-items-center ps-0">
                      <input class="form-check-input me-3" type="checkbox" value="" aria-label="..." />
                      Update the userflow and stories
                    </li>

                    <li class="list-group-item border-0 d-flex align-items-center ps-0">
                      <input class="form-check-input me-3" type="checkbox" value="" aria-label="..." />
                      Adjust the components
                    </li> 
                                        <!--  javascript Block - for Array Display START    -->

                    <% for(i=0; i < newListItem.length; i++ ){ %>
                      <li class="list-group-item border-0 d-flex align-items-center ps-0"> 
                        <input class="form-check-input me-3" type="checkbox" value="" aria-label="..." /><br>
                        <%= newListItem[i] %> 
                        <h6>    Data from array</h>
                      </li>
                    <% } %>
                                        <!--  javascript Block - for Array Display END   -->


                                        <!--  javascript Block - for Mongoose manipulation by Id START   -->

                    <% tasksList.forEach(taskItem => { %>
                      <li class="list-group-item border-0 d-flex align-items-center ps-0"> 
                        <input class="form-check-input me-3" type="checkbox" value="" aria-label="..." /><br>
                        <%= taskItem.task %>
                        <h6>  Data from mongooseDB</h6>
                        <a href="/getElementById/<%=taskItem._id%>/update">Edit</a>
                        <a href="/getElementById/<%=taskItem._id%>/delete">Delete</a>
                      </li>
                      <% }); %>
                                        <!--  javascript Block - for Mongoose manipulation by Id END   -->


                                        <!--  javascript Block for which Input to Display START   -->

                    <% if (task /*task variable from getAllTask function*/ == null) { %>
                      <form class="list-group-item border-0 d-flex align-items-center ps-0" action="/" method="post">
                        <input type="text" id="addInput" name="newItem" autocomplete="off">
                        <button type="submit">+</button>
                        <h3>Input send to array</h3>
                      </form>
  
                      <form class="list-group-item border-0 d-flex align-items-center ps-0" action="/createTask" method="post">
                        <input type="text" id="addInput" name="task" autocomplete="off">
                        <button type="submit">+</button>
                        <h3>Input send to Mongoose</h3>
                      </form>

                    <% } else { %>

                        <form id="updateDiv" class="list-group-item border-0 d-flex align-items-center ps-0" action="/updateOne/<%= task._id %>" method="post">
                          <input type="text" id="addInput" name="task" autocomplete="off" value="<%= task.task%>">
                          <button type="submit">Update</button>
                        </form>

                      <% } %>
                  </ul>
